<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/chartreuse">
        <RelativeLayout
            android:id="@+id/home_profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="150dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pr_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/user_profile"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/pr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/pr_image"
                android:text="Nguyễn Tiến"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/pr_diem"
                android:layout_toRightOf="@+id/pr_image"
                android:layout_below="@id/pr_name"
                android:text="0 điểm"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/home_thongbao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_notifications"
            android:layout_alignParentRight="true"
            android:background="@color/chartreuse"/>
        <ImageButton
            android:id="@+id/home_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_location"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@color/chartreuse"/>
        <ImageButton
            android:id="@+id/home_coupon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_gift_box"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:background="@color/chartreuse"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_card_passio"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/card_passio"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:text="Ưu đãi dành cho bạn"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/uu_dai"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/uu_dai_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Tin tức"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <GridView
                android:id="@+id/home_list"
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                android:numColumns="1"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_chonmon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_menu"
            app:civ_border_color="@color/chartreuse"
            app:civ_border_width="1dp"/>
    </RelativeLayout>
</RelativeLayout>